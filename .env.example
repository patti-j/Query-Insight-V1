# App
NODE_ENV=production
PORT=8080

# OpenAI
OPENAI_API_KEY=your_key_here
OPENAI_MODEL=gpt-4o-mini

# Azure SQL (recommended pattern: one connection string or discrete parts)
# Option A: discrete parts
AZURE_SQL_SERVER=your-server-name.database.windows.net
AZURE_SQL_DATABASE=your-db-name
AZURE_SQL_USER=your-user
AZURE_SQL_PASSWORD=your-password
AZURE_SQL_ENCRYPT=true

# Option B: single connection string (if your code supports it)
AZURE_SQL_CONNECTION_STRING=Server=tcp:your-server-name.database.windows.net,1433;Initial Catalog=your-db-name;Persist Security Info=False;User ID=your-user;Password=your-password;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;

# Query Insight target
DASHT_PLANNING_TABLE=[publish].[DASHt_Planning]
